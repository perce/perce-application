@import "../vendor/normalize"

*, *:before, *:after
  box-sizing border-box

body
  background-color color-dark-grey
  color color-white
  font-size 16px;

  font-family 'Open Sans', sans-serif

  overflow hidden

  padding 1rem

.container
  overflow hidden


footer a,
footer a:visited
  color: #fff


.col-3-1
  display inline-block
  width  33%

// .ng-enter, .ng-leave
//   &.container
//     max-height 0

.container
  &.ng-scope
    position absolute

    top 5rem
    right 1rem
    bottom 2rem
    left 1rem

    overflow auto

    padding 1rem 0 0 0

  h1
    font-size 1.25rem
    line-height 1.5rem
    background color-blue
    border 2px solid color-white
    font-weight 400

    padding .5rem
    margin 0 0 1rem

  h2
    position absolute

    right 0
    top 1rem

    margin 0
    padding 0.5rem

    font-size 1rem
    line-height 1.5rem

    background color-dark-blue

    border-top 2px solid color-white
    border-right 2px solid color-white
    border-bottom 2px solid color-white
