@import "../vendor/normalize"

*, *:before, *:after
  box-sizing border-box

body
  background-color color-dark-grey
  color color-white
  font-size 16px;

  font-family 'Open Sans', sans-serif

  overflow hidden

.container
  overflow hidden


footer a,
footer a:visited
  color color-white

header
  padding 1rem
  background color-super-dark-grey

.col-3-1
  display inline-block
  width  33%

// .ng-enter, .ng-leave
//   &.container
//     max-height 0

.mainView
  position absolute

  top 5rem
  right 0
  bottom 2rem
  left 0

  overflow auto

  padding 1rem 1rem 0 ( sidebar-width + 1rem )

  h1
    font-size 1.25rem
    line-height 1.5rem
    background color-blue
    border 2px solid color-super-dark-grey
    font-weight 400

    padding .5rem
    margin 0 0 1rem

  h2
    position absolute

    right 1rem
    top 1rem

    margin 0
    padding 0.5rem 1rem

    font-size 1rem
    font-weight 400
    line-height 1.5rem

    background color-dark-blue

    border-top 2px solid color-super-dark-grey
    border-right 2px solid color-super-dark-grey
    border-bottom 2px solid color-super-dark-grey
