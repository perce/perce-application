.projectNavigation
  position absolute

  top 0
  bottom 0

  left 0

  width sidebar-width

  background color-super-dark-grey

  &, ul, li
    margin 0
    padding 0

  a
    position relative
    display block
    text-decoration none
    color color-white

    padding 1.5rem 1.5rem 1.5rem 5rem

    box-shadow inset 0 1px darken( color-super-dark-grey, 7 ), inset 0 2px color-dark-grey

    transition 0.2s linear color

    &:hover
      color color-red

    &:last-child
      border-bottom none

    &:after
      position absolute
      z-index 1

      width 100%

      left -100%
      top 2px
      bottom 0

      padding 1.5rem 1.5rem 1.5rem 5rem

      background darken( color-super-dark-grey, 3 )
      content attr(data-title)

      color color-red

      -webkit-transition 0.25s linear left
      -moz-transition 0.25s linear left
      -o-transition 0.25s linear left
      transition 0.25s linear left

    &.active
      &:before
        position absolute
        z-index 2

        content ''

        width 0.5rem

        left -1px
        top 2px
        bottom 0

        background color-red

      &:after
        left 0

  .active
    color color-red
