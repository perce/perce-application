.header
  position relative
  height 5rem
  font-size 1rem

  a
    color color-white
    text-decoration none

  nav
    display inline-block
    vertical-align top

    float right

    height header-height

    padding 1rem 0 0 0

  ul
    margin 0

  li
    display inline-block
    margin 0 2rem

    &:last-child
      margin-right 0


.header--logo, .header--email
  display inline-block
  vertical-align top
  height header-height

.header--logo

  margin -1rem 0 0 -1rem

  height header-height
  width sidebar-width

  padding 2.5rem 0 0 4.5rem

  background-color darken( color-super-dark-grey, 5 )
  background-image url(../img/logo.svg)
  background-size 2.5rem 2.5rem
  background-repeat no-repeat
  background-position 1rem 1rem

  overflow hidden

.header--email
  position relative

  margin  0 0 0 1rem
  padding 1rem 0 0 1.5rem

  &:before
    position absolute
    content ''

    top 1.25rem
    left 0

    height 1rem
    width 1rem

    border-radius 50%
    border 2px solid color-blue

